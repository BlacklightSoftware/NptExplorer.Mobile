<?xml version="1.0" encoding="utf-8" ?>
<views:PageBase
    x:Class="NptExplorer.Mobile.Views.Help.TermsAndConditionsView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:help="clr-namespace:NptExplorer.Mobile.ViewModels.Help;assembly=NptExplorer.Mobile"
    xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
    xmlns:views="clr-namespace:NptExplorer.Mobile.Views;assembly=NptExplorer.Mobile"
    Title="Terms &amp; Conditions"
    ios:Page.PrefersHomeIndicatorAutoHidden="True"
    ios:Page.UseSafeArea="True"
    x:TypeArguments="help:TermsAndConditionsViewModel">

    <ContentPage.Content>
        <WebView
            HorizontalOptions="FillAndExpand"
            Source="{Binding TermsAndConditionsHtml}"
            VerticalOptions="FillAndExpand" />
    </ContentPage.Content>
</views:PageBase>